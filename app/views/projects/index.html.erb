<div class="row">

  <div class="col-md-6">
    <h1>Scrum for Wizards</h1>
    <h2>Projects:</h2>
    <ul>
    <% @projects.each do |project| %>
      <li>
        <%= link_to project.name, project %>
        <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-xs btn-default' %>
        <%= link_to 'Destroy', project_path(project), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
    </ul>
    <%= link_to 'Create new project', new_project_path %>
  </div>

  <div class="col-md-6">
    <%= image_tag "logo.png" %>
  </div>

</div>